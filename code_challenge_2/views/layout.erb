<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <%= "<title>#{@name.to_s}</title>"%>
    <style>
      body { font-family: sans-serif; }

      #footer {
        position: fixed;
        left: 10px;
        bottom: 20px;
      }

      .sub-footer {
        position: fixed;
        left: 10px;
        bottom: 50px;
      }

      .sub-footer div {
        display: inline-block;
      }
    </style>
  </head>

  <body>
    <div id="layout">
      <div id="main">
        <div class="content">
          <%= yield %>
        </div>
      </div>
    </div>
    <div id="footer">
      <%= "There are #{@users.count} users with #{count_interests} interests." %>
    </div>
  </body>
</html>